{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::${appname}-terraform-${env}",
      "Principal": { "AWS": "${user}" }
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject"],
      "Resource": "arn:aws:s3:::${appname}-terraform-${env}/jenkins.state",
      "Principal": { "AWS": "${user}" }
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject"],
      "Resource": "arn:aws:s3:::${appname}-terraform-${env}/frontend.state",
      "Principal": { "AWS": "${user}" }
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject"],
      "Resource": "arn:aws:s3:::${appname}-terraform-${env}/backend.state",
      "Principal": { "AWS": "${user}" }
    }
  ]
}
